<Window xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="CraftLR.Exercice5.HelloUI" Title="Hello you !">
    <StackPanel Orientation="Vertical">
        <TextBlock>What is your name?</TextBlock>
        <TextBox Name="NameTB"></TextBox>
        <TextBlock Name="GreetingTB" Text="{Binding ElementName='NameTB', Path=Text, StringFormat='Bonjour {0}'}"></TextBlock>
    </StackPanel>
</Window>
